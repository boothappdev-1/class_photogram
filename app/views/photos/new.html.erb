<!-- Validation failure messages -->

<% if @photo.errors.any? %>
  <% @photo.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Simple full-width example-->

<div class="page-header">
  <h1>Add Photo</h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_photo" class="form-horizontal">
      <!-- Label and input for source -->
      <div class="form-group">
        <label for="source" class="col-sm-2 control-label">
          Source
        </label>
        <div class="col-sm-10">
          <input type="text" id="source" name="source" placeholder="Source" class="form-control" value="<%= @photo.source %>">
        </div>
      </div>

      <!-- Label and input for caption -->
      <div class="form-group">
        <label for="caption" class="col-sm-2 control-label">
          Caption
        </label>
        <div class="col-sm-10">
          <textarea id="caption" name="caption" placeholder="Caption" class="form-control" rows="3"><%= @photo.caption %></textarea>
        </div>
      </div>

      <!-- Label and input for owner_id -->
      <div class="form-group">
        <label for="owner_id" class="col-sm-2 control-label">
          Owner
        </label>
        <div class="col-sm-10">
          <input type="text" id="owner_id" name="owner_id" placeholder="Owner" class="form-control" value="<%= @photo.owner_id %>">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Create Photo" class="btn btn-success">
          or
          <a href="/photos">Cancel</a>
        </div>
      </div>
    </form>
  </div>
</div>

<!-- End simple full-width example-->


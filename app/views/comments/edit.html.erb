<!-- Validation failure messages -->

<% if @comment.errors.any? %>
  <% @comment.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>


<!-- Simple full-width example -->

<div class="page-header">
  <h1>Edit Comment #<%= @comment.id %></h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_comment/<%= @comment.id %>" class="form-horizontal">
      <!-- Label and input for content -->
      <div class="form-group">
        <label for="content" class="col-sm-2 control-label">
          Content
        </label>
        <div class="col-sm-10">
          <textarea id="content" name="content" placeholder="Content" class="form-control" rows="3"><%= @comment.content %></textarea>
        </div>
      </div>

      <!-- Label and input for commenter_id -->
      <div class="form-group">
        <label for="commenter_id" class="col-sm-2 control-label">
          Commenter
        </label>
        <div class="col-sm-10">
          <input type="text" id="commenter_id" name="commenter_id" placeholder="Commenter" class="form-control" value="<%= @comment.commenter_id %>">
        </div>
      </div>

      <!-- Label and input for photo_id -->
      <div class="form-group">
        <label for="photo_id" class="col-sm-2 control-label">
          Photo
        </label>
        <div class="col-sm-10">
          <input type="text" id="photo_id" name="photo_id" placeholder="Photo" class="form-control" value="<%= @comment.photo_id %>">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Update Comment" class="btn btn-warning">
          or
          <a href="/comments/<%= @comment.id %>">Cancel</a>
        </div>
      </div>
    </form>
  </div>
</div>

<!-- End simple full-width example-->


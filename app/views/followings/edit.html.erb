<!-- Validation failure messages -->

<% if @following.errors.any? %>
  <% @following.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>


<!-- Simple full-width example -->

<div class="page-header">
  <h1>Edit Following #<%= @following.id %></h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_following/<%= @following.id %>" class="form-horizontal">
      <!-- Label and input for leader_id -->
      <div class="form-group">
        <label for="leader_id" class="col-sm-2 control-label">
          Leader
        </label>
        <div class="col-sm-10">
          <input type="text" id="leader_id" name="leader_id" placeholder="Leader" class="form-control" value="<%= @following.leader_id %>">
        </div>
      </div>

      <!-- Label and input for follower_id -->
      <div class="form-group">
        <label for="follower_id" class="col-sm-2 control-label">
          Follower
        </label>
        <div class="col-sm-10">
          <input type="text" id="follower_id" name="follower_id" placeholder="Follower" class="form-control" value="<%= @following.follower_id %>">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Update Following" class="btn btn-warning">
          or
          <a href="/followings/<%= @following.id %>">Cancel</a>
        </div>
      </div>
    </form>
  </div>
</div>

<!-- End simple full-width example-->

